<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A2A2A"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/containerCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_margin="@dimen/dp_40"
        app:cardCornerRadius="@dimen/dp_20"
        android:elevation="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tvTotalTitle"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Balance" />

    <TextView
        android:id="@+id/tvTotal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:maxLength="8"
        android:drawablePadding="@dimen/dp_5"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_rupee"
        android:textSize="@dimen/sp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="240000000000000" />

    <Button
        android:id="@+id/btnUpdate"
       android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update" />

</LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/transactionContainerCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_margin="@dimen/dp_40"
        app:cardCornerRadius="@dimen/dp_20"
        android:elevation="@dimen/dp_40"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tvTransactionAmount"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/black"
                android:padding="@dimen/dp_7"
                android:background="@drawable/rectangle"
                android:textSize="@dimen/sp_20"
                android:maxLength="8"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount" />

            <EditText
                android:id="@+id/tvTransactionTitle"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/black"
                android:background="@drawable/rectangle"
                android:padding="@dimen/dp_7"
                android:maxLines="2"
                android:textSize="@dimen/sp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Short Description" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="horizontal">

            <Button
                android:id="@+id/btnCredit"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textAllCaps="false"
                android:backgroundTint="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit" />

               <Button
                   android:id="@+id/btnDebit"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_20"
                   android:textAllCaps="false"
                   android:backgroundTint="#ff77"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Debit" />

           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvTransactionsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerCardView" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactionHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTransactionsHeader"
        app:layout_constraintVertical_bias="0.044" />

</androidx.constraintlayout.widget.ConstraintLayout>